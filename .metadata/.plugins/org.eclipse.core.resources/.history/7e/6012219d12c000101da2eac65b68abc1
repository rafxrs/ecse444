/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */
#define FS_HZ 			32000.0f
#define NOTE_MAX_SAMPLES 1024
#define DAC_MID        2048
#define DAC_AMP        2000
#define NOTE_DURATION_MS 250

typedef enum {
  GAME_AWAKE,
  GAME_IDLE,
  GAME_STARTING,
  GAME_ON,
  GAME_ENDING,
  GAME_DONE
} GameState;
/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
DAC_HandleTypeDef hdac1;
DMA_HandleTypeDef hdma_dac1_ch1;

I2C_HandleTypeDef hi2c2;

TIM_HandleTypeDef htim2;

UART_HandleTypeDef huart1;

/* USER CODE BEGIN PV */
static GameState g_state = GAME_AWAKE;
static uint16_t  noteBuf[NOTE_MAX_SAMPLES];
static uint32_t  noteLen = 0;
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_DMA_Init(void);
static void MX_DAC1_Init(void);
